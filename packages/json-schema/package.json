{
  "name": "@typespec/json-schema",
  "version": "0.1.0",
  "author": "Microsoft Corporation",
  "description": "TypeSpec library for emitting TypeSpec to JSON Schema and converting JSON Schema to TypeSpec",
  "homepage": "https://github.com/Microsoft/TypeSpec",
  "readme": "https://github.com/Microsoft/TypeSpec/blob/master/README.md",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Microsoft/TypeSpec.git"
  },
  "bugs": {
    "url": "https://github.com/Microsoft/TypeSpec/issues"
  },
  "keywords": [
    "TypeSpec",
    "json schema"
  ],
  "type": "module",
  "main": "dist/src/index.js",
  "exports": {
    ".": "./dist/src/index.js"
  },
  "tspMain": "dist/src/index.js",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "clean": "rimraf ./dist ./temp",
    "build": "tsc -p . && npm run lint-typespec-library",
    "watch": "tsc -p . --watch",
    "lint-typespec-library": "tsp compile . --warn-as-error --import @typespec/library-linter --no-emit",
    "test": "mocha",
    "test-official": "c8 mocha --forbid-only --reporter mocha-multi-reporters",
    "lint": "eslint . --ext .ts --max-warnings=0",
    "lint:fix": "eslint . --fix --ext .ts",
    "compile-samples": "tsp compile "
  },
  "files": [
    "lib/*.tsp",
    "dist/**",
    "!dist/test/**"
  ],
  "peerDependencies": {
    "@typespec/compiler": "~0.42.0"
  },
  "devDependencies": {
    "@types/mocha": "~10.0.0",
    "@types/node": "~18.11.9",
    "@typespec/compiler": "~0.42.0",
    "@typespec/library-linter": "~0.42.0",
    "@typespec/eslint-plugin": "~0.42.0",
    "eslint": "^8.12.0",
    "mocha": "~10.1.0",
    "mocha-junit-reporter": "~2.2.0",
    "mocha-multi-reporters": "~1.5.1",
    "c8": "~7.12.0",
    "rimraf": "~3.0.2",
    "typescript": "~4.9.3",
    "ajv": "~8.11.2",
    "@typespec/openapi3": "~0.42.0",
    "@types/relateurl": "~0.2.29",
    "@types/js-yaml": "~4.0.1",
    "@typespec/internal-build-utils": "~0.4.0"
  },
  "dependencies": {
    "relateurl": "~0.2.7",
    "js-yaml": "~4.1.0"
  }
}
